############################################################
# üîß Application Settings
############################################################
# Environment type: development, staging, production
APP_ENV=development

# Application name
APP_NAME=YourAppName

# Application URL (adjust if using localhost or domain)
APP_URL=http://localhost

# Authentication (Vite-exposed)
VITE_AUTH_USERNAME=your_username
VITE_AUTH_PASSWORD=your_password

############################################################
# üóÑÔ∏è Database Configuration (XAMPP MySQL)
############################################################
# Database connection type
DB_CONNECTION=mysql

# Host (default for XAMPP is localhost or 127.0.0.1)
DB_HOST=127.0.0.1

# Port (default MySQL port)
DB_PORT=3306

# Database name (DOLE-GIP System Database)
DB_DATABASE=dole_db

# Database username (default XAMPP is 'root')
DB_USERNAME=root

# Database password (leave blank if root has no password in XAMPP)
# IMPORTANT: Set a strong password in production!
DB_PASSWORD=

############################################################
# üîë API Keys & Tokens
############################################################
# Example: third-party API keys
API_KEY_GOOGLE=
API_KEY_OPENAI=
API_KEY_STRIPE=

# JWT or session secret for authentication
JWT_SECRET=

############################################################
# üìß Mail Server Settings
############################################################
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=example@domain.com
MAIL_FROM_NAME="YourAppName Mailer"

############################################################
# üåê CORS / Security
############################################################
# Allowed origins for cross-origin requests
CORS_ALLOWED_ORIGINS=http://localhost,http://127.0.0.1

# FormSubmit.co Configuration
FORMSUBMIT_EMAIL=your@email.com

############################################################
# ‚öôÔ∏è Miscellaneous
############################################################
# Logging level: debug, info, warning, error
LOG_LEVEL=debug

# Timezone
APP_TIMEZONE=Asia/Manila
TZ=Asia/Manila
